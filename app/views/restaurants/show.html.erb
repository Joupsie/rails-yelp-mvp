<%= link_to edit_restaurant_path(@restaurant.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this restaurant
<% end %>

<h1><%= @restaurant.name %></h1>

<p class="category"><%= @restaurant.category %></p>
<br>
<p class="phonenumber"><%= @restaurant.phone_number %></p>
<br>
<p class="address"><%= @restaurant.address %></p>


<hr>
<%= link_to 'Lache un com', new_restaurant_review_path(@restaurant) %>
<hr>
<%= link_to restaurants_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
